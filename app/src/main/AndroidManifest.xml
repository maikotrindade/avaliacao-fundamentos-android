<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.myapplication" >

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeMaterial" >
        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.ServiceOrderListActivity"
            android:label="@string/title_activity_service_order_list"
            android:parentActivityName=".controllers.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.ServiceOrderActivity"
            android:label="@string/title_activity_service_order"
            android:parentActivityName=".controllers.ServiceOrderListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.DashboardActivity" />
        </activity>
        <activity
            android:name=".controllers.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".controllers.ReportsActivity"
            android:label="@string/title_activity_reports" >
            android:parentActivityName=".controllers.ReportsActivity >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.DashboardActivity" />
        </activity>
        <activity
            android:name=".controllers.AboutActivity"
            android:label="@string/title_activity_about" >
            android:parentActivityName=".controllers.AboutActivity >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.DashboardActivity" />
        </activity>
    </application>

</manifest>
